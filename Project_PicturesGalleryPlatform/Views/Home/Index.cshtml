        function displayFileName() {
            const fileInput = document.getElementById('file-input');
            const fileNameSpan = document.getElementById('file-name');

            // 檢查是否選擇了檔案
            if (fileInput.files.length > 0) {
                const fileName = fileInput.files[0].name;
                fileNameSpan.textContent = fileName;
                fileNameSpan.style.display = 'inline'; // 顯示檔案名稱

                const formData = new FormData();
                formData.append('file', fileInput.files[0]);

                // 上傳檔案並處理回應
                fetch('http://127.0.0.1:5001/upload', { method: 'POST', body: formData })
                    .then(response => response.json())
                    .then(data => {
                        if (data.filtered_image_names && data.filtered_image_names.length > 0) {
                            const ids = data.filtered_image_names.join(',');
                            window.location.href = `/Page/Result?ids=${ids}`;
                        } else {
                            alert('找不到相似圖片');
                        }
                    })
                    .catch(error => alert('上傳過程中發生錯誤，請稍後再試。'));
            } else {
                fileNameSpan.style.display = 'none'; // 隱藏檔案名稱
            }
        }

