document.addEventListener("DOMContentLoaded", function () {
    const galleryInner = document.querySelector(".u-gallery-inner-1");
    const groups = galleryInner.querySelectorAll(".u-gallery-group");
    let currentIndex = 0;

    function showGroup(index) {
        groups.forEach((group, i) => {
            group.style.display = i === index ? "flex" : "none";
        });
    }

    function autoRotate() {
        setInterval(() => {
            currentIndex = (currentIndex + 1) % groups.length;
            showGroup(currentIndex);
        }, 3000); // Rotate every 3 seconds
    }

    // Initialize gallery
    showGroup(currentIndex);
    autoRotate();

    // Navigation
    document.querySelector(".u-gallery-nav-prev").addEventListener("click", function () {
        currentIndex = (currentIndex - 1 + groups.length) % groups.length;
        showGroup(currentIndex);
    });

    document.querySelector(".u-gallery-nav-next").addEventListener("click", function () {
        currentIndex = (currentIndex + 1) % groups.length;
        showGroup(currentIndex);
    });
});

