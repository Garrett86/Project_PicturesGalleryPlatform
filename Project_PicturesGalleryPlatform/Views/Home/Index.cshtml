        <h2 class="u-align-center u-text u-text-default u-text-1" data-animation-name="customAnimationIn"
            data-animation-duration="1500" data-animation-delay="500">
            排行榜
        </h2>
        <div class="u-expanded-width u-gallery u-layout-horizontal u-lightbox u-no-transition u-show-text-none u-width-fixed u-gallery-1">
            <div class="u-gallery-inner u-gallery-inner-1">
                <!-- Group 1 -->
                <div class="u-gallery-group" style="display: flex;">
                    <!--顯示前三個圖片 -->
                    @foreach (var (score, index) in scores.Take(3).Select((value, i) => (value, i)))    
                    {                        
                        <div class="u-effect-hover-zoom u-gallery-item">
                            <div class="u-back-slide">
                                <img class="u-back-image" src="@Url.Content("~/images2/" + score.PictureId + ".webp")" alt="Image @score.PictureId">
                                @* <span class="image-ranking">@score.Score</span> *@
                                <span class="image-number">@index</span>
                            </div>
                        </div>
                    }
                </div>

                <!-- Group 2 -->
                <div class="u-gallery-group" style="display: none;">
                    <!--顯示後三個圖片-->
                    @foreach (var (score, index) in scores.Skip(3).Take(3).Select((value, i) => (value, i))) 
                    {
                        <div class="u-effect-hover-zoom u-gallery-item">
                            <div class="u-back-slide">
                                <img class="u-back-image" src="@Url.Content("~/images2/" + score.PictureId + ".webp")" alt="Image @score.PictureId">
                                @* <span class="image-ranking">@score.Score</span> *@
                                <span class="image-number"></span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Carousel Navigation -->
            <a class="u-gallery-nav u-gallery-nav-prev u-grey-70 u-icon-circle u-opacity u-opacity-70 u-spacing-10 u-text-white" href="#" role="button">
